---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ site.title }}</h1>
    <p class="desc">{{ page.subtitle }}</p>
  </header>

  <article>
    <div class="row">
      <!-- Left Column: CAMER Intro and Research Areas -->
      <div class="col-lg-7 col-md-12">
        <div class="home-content">
          {{ content }}
        </div>
      </div>

      <!-- Right Column: News and Recent Publications -->
      <div class="col-lg-5 col-md-12">
        <!-- News Section -->
        {% if site.data.news %}
          <div class="news-section mb-5">
            <h2 class="mb-4">news</h2>
            <div class="news-timeline">
              {% for item in site.data.news limit:5 %}
                <div class="news-item">
                  <div class="news-dot"></div>
                  <div class="news-content">
                    <div class="news-date">{{ item.date }}</div>
                    <div class="news-text">{{ item.content }}</div>
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>
        {% endif %}

        <!-- Recent Publications -->
        <div class="recent-publications">
          <h2 class="mb-4">recent publications</h2>
          <div class="publications-list">
            {% bibliography --max 5 --template compact --group_by none %}
          </div>
          <div class="mt-3">
            <a href="{{ '/publications/' | relative_url }}" class="see-all-link">
              See all publications â†’
            </a>
          </div>
        </div>
      </div>
    </div>
  </article>
</div>
